<!doctype html>
<html>
<head>
<title>QQQFINANCE Login</title>
<meta charset="utf-8">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<p class="fs-1 fw-bold px-5 mt-5" style="letter-spacing: 3px;">QQQFinance</p>

<% flash.each do |type, msg| %>
