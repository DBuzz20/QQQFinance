<!doctype html>
<html>
<head>
<title>QQQFINANCE Login</title>
<meta charset="utf-8">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<p class="fs-1 fw-bold px-5 mt-5" style="letter-spacing: 3px;">QQQFinance</p>

<% flash.each do |type, msg| %>
  <div class="alert alert-danger" role="alert">
  <h4 class="alert-heading">Impossibile accedere al wallet!</h4>
    <p><%= msg %>   Se non possiedi gi√† un account,<a href="/users/sign_up" class="alert-link">Registrati</a>.</p>
  </div>
<% end %>

<%=form_with(model: @user, url: session_path(@user))do |form| %>

<br>
<div class="container text-center">
	<div class="row">
		<div class="col">
		</div>
		<div class="col">
			<p class="fw-semibold fs-2" style="width: 50px;">
		<%= form.text_field :email %>
    <%= form.password_field :password%>
			</p>
		</div>
		<div class="col">
		</div>
		<div class="col mt-5"> 
		<div class="d-grid gap-2 col-6 mx-auto">
		<%= form.submit %>
		<br>
		<button type="reset" class="btn btn-danger btn-lg">Reset</button>
		</div>
		</div>
	</div>
	<%end%>
	
	</div>
</div>
<br>
<p class="text-center fw-semibold fs-2">oppure</p>
<br>
<div class="container text-center">
 <div class="row">
	<div class="col">
	</div>
	</div>
	<div class="col">
	</div>
	<div class="col">
	 </div>

   

<%- if devise_mapping.omniauthable? %>
  <%- User.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: 'btn btn-success btn-lg' %><br>
	  <% end %>
<% end %>
	</div>
<br>
<br>
<br>
<p class="text-center fw-semibold fs-2">Se non hai ancora un account, <a href="/users/sign_up">registrati</a></p>


</body>
</html>
