
  <%=render "/header"%>
  <div class="row pt-2">
    <div class="col-5">
      <h1>IL MIO PROFILO</h1>
    </div>
    <div class="col-7">
      <%= link_to "Modifica profilo",edit_user_path(@user) %>
    </div>
  </div>  
  <%= render @user %>
  

  <div class="container-fluid row m-2">
    <%if (!@user.commento or @user.commento!="") #se non è vuoto
      @commento=@user.commento
    else
      @commento="Aggiungi qui un commento sul tuo wallet. Questo messaggio verrà visualizzato agli utenti che visiteranno il tuo profilo."
    end %>

    <textarea rows=8 cols=50 placeholder="<%= @commento %>" disabled></textarea>
  </div>
