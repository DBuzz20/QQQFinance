<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <%= render "/header"%>

    <div class="row pt-2">
        <h1 class="col-3 text-center"><%= @azione.nome %></h1>  
        <h4 class="col p-2"><%= @azione.isin %> </h4>
        <%if current_user %>
        <div class="col">   
            <form action="/wallet/movimenti" method='post' class="row" >
                <input type="hidden" name="isin" id="isin" value="<%= @azione.isin %>" />
                <div class="col">
                    <input name='quantita' id='quantita' type='number' min='1' placeholder="Quantità" class='form-control' required>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary">Aggiungi</button>
                </div> 
            </form>
        </div>
        <%end%>
    </div>
    <p class="p-2 text-center">Il prezzo di quest'azione è <%= @azione.prezzo %>$</p>
    <div class="container-fluid row">
        <div class="col-6">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Settore</th>
                    <th scope="col">Marketcap</th>
                    <th scope="col">Roe</th>
                    <th scope="col">divyield</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row"></th>
                    <td><%= @azione.settore %></td>
                    <td><%= @azione.marketcap %></td>
                    <td><%= @azione.roe%></td>
                    <td><%= @azione.divyield%></td>
                </tr>
            </tbody>
              <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">volume</th>
                    <th scope="col">pe</th>
                    <th scope="col">ps</th>
                    <th scope="col">pb</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row"></th>
                    <td><%= @azione.volume %></td>
                    <td><%= @azione.pe %></td>
                    <td><%= @azione.ps %></td>
                    <td><%= @azione.pb%></td>
                </tr>
            </tbody>
              <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">debteq</th>
                    <th scope="col">opmargin</th>
                    <th scope="col">ebitda</th>
                    <th scope="col">Roa</th>
                    
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row"></th>
                    <td><%= @azione.debteq %></td>
                    <td><%= @azione.opmargin %></td>
                    <td><%= @azione.ebitda %></td>
                    <td><%= @azione.roa %></td>
               
                </tr>
            </tbody>
        </table>
        </div>
        <div class="col-6">
            <div class="tradingview-widget-container">
                <div id="basic-area-chart-demo"></div>
                    <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
                    <script type="text/javascript">
                        new TradingView.widget(
                        {
                            "width": "100%",
                            "height": "300px",
                            "symbol": "<%=@azione.isin%>",
                            "interval": "D",
                            "timezone": "Etc/UTC",
                            "theme": "light",
                            "style": "3",
                            "locale": "it",
                            "toolbar_bg": "#f1f3f6",
                            "enable_publishing": false,
                            "allow_symbol_change": true,
                            "container_id": "basic-area-chart-demo"
                        }
                    );
                </script>
            </div>
        </div>
    </div>

    <div class="container">
        <%= render "/comment/index"%>
    </div>
</body>

